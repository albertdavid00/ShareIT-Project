@{
    ViewBag.Title = "Index";
}

<h2>Profiles List</h2>
<h1>@ViewBag.Message</h1>

@if (User.IsInRole("Admin") || ViewBag.NoProfile == 0)
{
    <a class="btn btn-primary" href="/Profiles/New">Adauga profil</a>
}
<br /><br />
    <div class="container">
        <br />
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <form class="card card-sm" method="GET">
                    <div class="card-body row no-gutters align-items-center">
                        <div class="col-auto">
                            <i class="fas fa-search h4 text-body"></i>
                        </div>
                        <!--end of col-->
                        <div class="col">
                            <input class="form-control form-control-lg form-controlborderless" type="text" name="search"
                                    value="@ViewBag.SearchString"
                                    placeholder="Search topics or keywords">
                        </div>
                        <!--end of col-->
                        <div class="col-auto">
                            <button class="btn btn-lg btn-success"
                                    type="submit">
                                Search
                            </button>
                        </div>
                        <!--end of col-->
                    </div>
                </form>
            </div>
            <!--end of col-->
        </div>
    </div>
    <div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li>
                    @if (ViewBag.search != "")
                    {
                        <a href="/Profiles/Index?page=1&search=@ViewBag.SearchString"
                            aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    }
                    else
                    {
                        <a href="/Profiles/Index?page=1" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    }
                </li>
                @for (int i = 1; i <= ViewBag.lastPage; i++)
                {
                    if (ViewBag.search != "")
                    {
                        <li>
                            <a href="/Profiles/Index?page=@i&search=@ViewBag.SearchString">@(i)</a>
                        </li>
                    }
                    else
                    {
                        <li><a href="/Profiles/Index?page=@i">@(i)</a></li>
                    }
                }
                <li>
                    @if (ViewBag.search != "")
                    {
                        <a href="/Profiles/Index?page=@(ViewBag.lastPage)&search=@ViewBag.SearchString" arialabel="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    }
                    else
                    {
                        <a href="/Profiles/Index?page=@(ViewBag.lastPage)" arialabel="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    }
                </li>
            </ul>
        </nav>
    </div>
<br />
<hr />
@foreach (var profile in ViewBag.Profiles)
{
    <div class="panel panel-default">
        <div class="panel-heading">@profile.ProfileName</div>
        <div class="panel-body">
            Descriere profil: <strong>@profile.ProfileDescription</strong>
            <br /><br />
            Profilul este: @if (profile.PrivateProfile == true)
            {
                <text>privat</text>
            }
            else
            { <text>public</text>}
            <br />
            <span class="label label-success">@profile.SignUpDate</span>
            <br />
            <hr>
        </div>
        <div class="panel panel-footer">
            <a class="btn btn-success btn btn-sm" href="/Profiles/Show/@profile.ProfileId">Afisare profil</a>
        </div>
    </div>
}
