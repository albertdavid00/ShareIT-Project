@model ShareIT.Models.Group
@{
    ViewBag.Title = "Members";
}

<h2>Membrii grupului</h2>
<br />
<a class="btn btn-link" href="/Groups/Show/@Model.GroupId">Inapoi la grup</a>
<br /> <br />
<div class="panel panel-default">
    <div class="panel-heading"> Lista membrii </div>

    @foreach (var member in ViewBag.Members)
    {
        
        <div class="panel-body">
            <strong>@member.UserName</strong>
                @if (ViewBag.currentUserId == ViewBag.OwnerId)
                {
                    <a class="btn btn-danger pull-right" href="/Groups/DeleteMember/@member.UserName/@Model.GroupId">Elimina membru</a>
                }
                @foreach (var profile in ViewBag.profiles)
                {
                    if (profile.UserId == member.Id)
                    {
                        <a class="btn btn-success pull-right" href="/Profiles/Show/@profile.ProfileId">Afisare profil</a>
                    }
                }
                <br /> <hr />
        </div>
    }
</div>
