@model ShareIT.Models.Post
@{
    ViewBag.Titlu = "New";
}



<h2>Adaugare Postare</h2>

<form method="post" action="/Posts/New">
    @Html.Label("Title", "Titlu Postare")
    <br />
    @Html.TextBox("Title", null, new { @class = "form-control" })
    <br /><br />
    @Html.Label("Content", "Continut Postare")
    <br />
    @Html.TextArea("Content", null, new { @class = "form-control" })
    <br /><br />
    <button type="submit">Adauga postare</button>
    <br />

</form>
