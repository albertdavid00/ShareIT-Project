@model ShareIT.Models.Post
@{
    ViewBag.Title = "Edit";
}

<h2>Editare postare</h2>

<p> Afisare formular de editare a postarii - cu datele vechi ale postarii</p>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Posts"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.Hidden("Id")
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.Label("Title", "Titlu Postare")
    <br />
    @Html.Editor("Title")
   // @Html.ValidationMessage("Title", null, new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("Content", "Continut Postare")
    <br />
    @Html.EditorFor(m => m.Content)
   // @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
    <br />
    <br />
    @Html.Hidden("Date")
    <button type="btn btn-succes">Editeaza postare</button>
}